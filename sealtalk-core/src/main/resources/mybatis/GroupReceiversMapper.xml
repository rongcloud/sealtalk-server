    <insert id ="insertBatch"  keyProperty="id" useGeneratedKeys="true" parameterType="java.util.List" >
        insert into group_receivers (userId, groupId, groupPortraitUri, groupName, requesterId, receiverId, type, status, createdAt, updatedAt) values
        <foreach collection ="groupReceiverList" item="gr" index= "index" separator =",">
            (#{gr.userId}, #{gr.groupId}, #{gr.groupPortraitUri}, #{gr.groupName}, #{gr.requesterId}, #{gr.receiverId}, #{gr.type}, #{gr.status}, now(), now())
        </foreach >
    </insert >

    <select id="selectGroupReceiversWithIncludes" resultMap="withIncludeResultMap">

      SELECT gr.*,
       g.id g_id,
       g.name g_name,
       g.portraitUri g_portraitUri,
       g.creatorId g_creatorId,
       g.memberCount g_memberCount,
       g.isMute g_isMute,
       g.certiStatus g_certiStatus,

       requester.id requester_user_id,
       requester.region requester_user_region,
       requester.nickname requester_user_nickname,
       requester.portraitUri requester_user_portraitUri,
       requester.gender requester_user_gender,
       requester.stAccount requester_user_stAccount,
       requester.phone requester_user_phone,

       receiverU.id receiverU_user_id,
       receiverU.region receiverU_user_region,
       receiverU.nickname receiverU_user_nickname,
       receiverU.portraitUri receiverU_user_portraitUri,
       receiverU.gender receiverU_user_gender,
       receiverU.stAccount receiverU_user_stAccount,
       receiverU.phone receiverU_user_phone
    FROM group_receivers gr join `groups` g on gr.groupId = g.id
    join users requester on gr.requesterId = requester.id
    join users receiverU on gr.receiverId = receiverU.id
    where gr.userId = #{userId}
     order by gr.id DESC;
    </select>


    <delete id="deleteByGroupIdAndUserIds">
        DELETE FROM group_receivers WHERE groupId = #{groupId} AND userId IN
        <foreach collection="userIds" item="userId" open="(" separator="," close=")">
            #{userId}
        </foreach>
    </delete>

    <delete id="deleteByGroupIdAndUserIdsAndReceiverIds">
        DELETE FROM group_receivers WHERE groupId = #{groupId}
        AND userId IN
        <foreach collection="userIds" item="userId" open="(" separator="," close=")">
            #{userId}
        </foreach>
        AND receiverId IN
        <foreach collection="receiverIds" item="receiverId" open="(" separator="," close=")">
            #{receiverId}
        </foreach>
    </delete>

    <select id="selectLatest" resultMap="BaseResultMap">
        SELECT * FROM group_receivers WHERE userId = #{userId} AND groupId = #{groupId} AND receiverId = #{receiverId} AND type = #{type} AND status = #{status} ORDER BY id DESC LIMIT 1
    </select>

    <update id="updateStatus">
        UPDATE group_receivers SET status = #{newStatus}, updatedAt = now() WHERE groupId = #{groupId} AND receiverId = #{receiverId} AND type = #{type} AND status = #{currentStatus}
    </update>

    <update id="updateStatusByReceiverIds">
        UPDATE group_receivers SET status = #{newStatus}, updatedAt = now() WHERE groupId = #{groupId} AND status = #{currentStatus} AND receiverId IN
        <foreach collection="receiverIds" item="receiverId" open="(" separator="," close=")">
            #{receiverId}
        </foreach>
    </update>

    <delete id="deleteByUserId">
        DELETE FROM group_receivers WHERE userId = #{userId}
    </delete>

    <delete id="deleteByGroupId">
        DELETE FROM group_receivers WHERE groupId = #{groupId}
    </delete>
